{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true,
    },
    "globals": {
        "expect": true,
        "assert": true,
        "request": true,
        "app": true,
        "td": true,
        "Joi": true,
        "JoiAssert": true,
        "jwt": true
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "indent": [2,4],
        "no-console": 0,
        "import/no-extraneous-dependencies": [
            "error", {
                "devDependencies": true
            }
        ]
    }
}
